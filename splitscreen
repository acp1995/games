        <script>
            function countDown() {
                //alert("hi");
                $('.test').remove();
                init();

            }
        </script>
        <script type="text/javascript">
            var can, ctx, step = 10, steps = 50;
            delay = 20;

            var globalCnt = 3;

            mainCanvas = null,
                    mainContext = null,
                    fireworkCanvas = null,
                    fireworkContext = null,
                    viewportWidth = 0,
                    viewportHeight = 0;

            function init() {

                //onWindowResize();

                // create a canvas for the fireworks
                //can = document.createElement('canvas');
                //ctx = can.getContext('2d');
                //can.setAttribute("id", "main");

                // set the dimensions on the canvas
                //setMainCanvasDimensions();

                //can.width = window.innerWidth;
                //can.height = window.innerHeight;

                // add the canvas in
                //document.body.appendChild(can);

                //alert('b4');
                //$(".splitscreen-teaser-html").append(can);
                //alert('after');


                can = document.getElementById("MyCanvas");
                ctx = can.getContext("2d");
                ctx.fillStyle = "rgba(255,255,255,0.3)";
                ctx.font = "10pt Helvetica";
                ctx.textAlign = "center";
                ctx.textBaseline = "middle";
                TextSmallToBig();
            }


            function TextSmallToBig() {
                //alert(arg);
                step++;
                ctx.clearRect(0, 0, can.width, can.height);
                ctx.save();
                ctx.translate(can.width / 2, can.height / 2);
                ctx.font = step + "pt Helvetica";
                ctx.fillText(globalCnt, 0, 0);
                ctx.restore();
                if (step < steps) {
                    var t = setTimeout('TextSmallToBig()', 20);
                } else {
                    if (globalCnt > 0) {
                        globalCnt--;
                        step = 10;
                        var t = setTimeout('TextSmallToBig()', 20);
                    } else {
                        $.closeSplitscreen();

                        setTimeout(function() {

                            window.location = 'index.html';

                        }, 500);


                    }
                }
            }

            /*function onWindowResize() {
             viewportWidth = window.innerWidth;
             viewportHeight = window.innerHeight;
             }
             
             function setMainCanvasDimensions() {
             can.width = viewportWidth;
             can.height = viewportHeight;
             }*/
        </script>

